#See cursor and line indication
set constantshow

#See cursor and line indication- legacy mode
set const

#C/C++
include "/usr/share/nano/c.nanorc"

#...and other available spellings too!
include "/usr/share/nano/makefile.nanorc"
include "/usr/share/nano/*.nanorc"

#Smooth scrolling
set smooth

# Hard wrap at 80 chars
set fill 80

# And remove trailing whitespace
set justifytrim

#Soft Wrap
set softwrap

#Auto-indent
set autoindent

#1 Tab = 4 Spaces
set tabsize 4

#Use mouse
set mouse

#Ctrl-R inserts file in new Buffer
set multibuffer

#Search function extended with regex search
set regexp

#Enable suspension with Ctrl-Z
set suspend

